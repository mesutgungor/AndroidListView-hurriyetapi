<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:backgroundTint="@color/background_material_light">

    <TextView
        android:id="@+id/haberbasligi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Haber Başlığı..."
        android:textColor="#d26e58"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/haberresmi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:src="@drawable/son_dakika" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/llayout"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2017"
            android:id="@+id/habertarihi"
            android:textColor="#516ac9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/yerel-haberler/izmir/"
            android:id="@+id/haberkategorisi"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/habericerigi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="#a4090e"
            android:text="Haber içeriği Haber içeriği Haber içeriği Haber içeriği Haber içeriği Haber içeriği Haber içeriği Haber içeriği Haber içeriği Haber içeriği Haber içeriği "
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>